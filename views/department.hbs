<div class="row">
    <div class="col-md-12">
        <h1>{{data.departmentName}} - Department: {{data.departmentId}}</h1>
            <form method="post" action="/departments/update">
                <hr />
                <fieldset>
                    <div class="row">
                    <div class="col-md-12">
                        <input type="hidden" value="{{data.departmentId}}" name="departmentId" class="form-control"/>
                        <label for="departmentName">Department Name</label>
                        <input class="form-control" id="departmentName" name="departmentName" type="text" value="{{data.departmentName}}"/>
                    </div>
                </div>
                </fieldset>
                <br />
                <hr />
                <input type="submit" class="btn btn-primary pull-right" value="Update Department" id="empButton" /><br/><br/><br/>
            </form>
    </div>
</div>